<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="80dp"
    tools:context=".fragments.ProfileFragment" >

    <ImageView
        android:id="@+id/idProfilePic"
        android:layout_gravity="center_horizontal"
        android:layout_width="112dp"
        android:layout_height="112dp"
        android:src="@drawable/baseline_account_circle_24" />

    <TextView
        android:id="@+id/idProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingVertical="16dp"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="32dp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editBtn"
        android:minHeight="48dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Edit Profile"
        android:textColor="@color/colorPrimary" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start|center_vertical"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:paddingVertical="8dp">

        <LinearLayout
            android:id="@+id/addr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:clickable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="start"
                android:src="@drawable/baseline_location_on_24"
                app:tint="#FF808080" />

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingStart="24dp"
                android:gravity="start"
                android:text="Saved Address"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/addrArrow"
                android:layout_weight="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tint="#FF808080"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:animateLayoutChanges="true"
            android:id="@+id/animContainer">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/addrInputLayout"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:paddingBottom="16dp"
                android:background="@drawable/rounded"
                android:hint="Address">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/addrEntryField"
                    cornerRadius="24dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
            </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/baseline_share_24"
                app:tint="#FF808080"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:text="Share App"
                android:paddingStart="24dp"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tint="#FF808080"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/about"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal"
            android:clickable="true"
            android:paddingVertical="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:src="@drawable/baseline_info_24"
                app:tint="#FF808080"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:layout_weight="1"
                android:text="About"
                android:paddingStart="24dp"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_weight="5"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:tint="#FF808080"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#FF808080"
                android:src="@drawable/baseline_exit_to_app_24" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="Log Out"
                android:layout_weight="1"
                android:paddingStart="24dp"
                android:textSize="16dp"
                app:tint="#FF808080"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                app:tint="#FF808080"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/deleteAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:paddingVertical="16dp"
            android:clickable="true">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:tint="#FF808080"
                android:src="@drawable/baseline_delete_forever_24" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="start|center_vertical"
                android:text="Delete Account"
                android:layout_weight="1"
                android:paddingStart="24dp"
                android:textSize="16dp"
                app:tint="#FF808080"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="5"
                app:tint="#FF808080"
                android:src="@drawable/baseline_keyboard_arrow_right_24" />

        </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:id="@+id/fabContainer">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/idSavefab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="60dp"
            android:layout_margin="40dp"
            android:visibility="gone"
            android:contentDescription="Save"
            app:srcCompat="@drawable/baseline_save_24" />
    </LinearLayout>

</LinearLayout>